<%= form_for([consultation, report], remote: true) do |f| %>
<%#= form_for([consultation, report], url: choose_new_or_edit, remote: true) do |f| %>

  <% if report.errors.any? %>
    <div id="error_explanation">
      <h2><%= report.errors.count %>件のエラーがあります。</h2>
      <ul>
      <% report.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.hidden_field :consultation_id %>
  <!--<%= f.hidden_field :id %>-->
<%# binding.pry %>
  <div class="field">
    <!-- <%= f.text_area :content, :rows => "6", placeholder: "新しいレポート", class: "form-control"%>-->
    <%= f.text_area :content, :rows => "4", :value => report.content, placeholder: "新しいレポート", class: "form-control"%>
  </div>

  <p class="actions right">
      <%= f.label "相談者に開示する" %>
      <%= f.check_box :disclose %>
      <%= f.submit "登録", class: "btn btn-primary" %>
      <%= content_tag(:span, "キャンセル", class: "btn btn-primary", id: 'cancel')%>
  </p>
<% end %>

<script>
  $('#cancel').on('click',function(){
     $('#report_content').val('');
     $('#report_disclose').prop('checked', false);
  });
</script>
